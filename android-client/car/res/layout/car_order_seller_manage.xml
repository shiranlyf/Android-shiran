<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 顶部 -->

    <LinearLayout
        android:id="@+id/car_address_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg_n"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/car_address_goback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_activate_bg"
            android:drawableLeft="@drawable/back"
            android:gravity="center_vertical"
            android:text="@string/person_order_address"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 这里设置的时间的选择器的位置布局 -->

    <LinearLayout
        android:id="@+id/order_seller_manage_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal" >

        <DatePicker
            android:id="@+id/datepickerstart"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="至" />

        <!--  这个是时间插件-->
        <DatePicker
            android:id="@+id/datepickerend"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />
        
    </LinearLayout>

    <!-- 中间部分订单列表 -->
    <ListView
        android:id="@+id/person_order_manage_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" >
    </ListView>

</LinearLayout>