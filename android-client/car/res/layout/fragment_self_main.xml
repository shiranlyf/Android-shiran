<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
          <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/my_name"
             android:padding="@dimen/normal_space"
             android:textSize="@dimen/title_text_size"
             android:background="@color/white"
             android:textColor="@color/title_color"
             android:gravity="center_horizontal"/>
         </LinearLayout>
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/normal_space"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <ImageView
                android:id="@+id/my_index_login_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/portrait_def"
                android:scaleType="centerInside"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/my_index_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/my_index_login_image"
                android:text="点击登录"
                android:textSize="@dimen/text_size_defalut"
                android:paddingLeft="@dimen/little_space"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_normal"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/normal_space">
            <TextView 
                android:id="@+id/my_index_nav_dianping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/my_dianping_user_icon_normal"
                android:text="我的点评"/>
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"
                />
            <TextView 
                android:id="@+id/my_index_nav_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/my_collect_user_icon_normal"
                android:text="我的点评"/>
            <TextView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/normal_bg_color"
                />
            <TextView 
                android:id="@+id/my_index_nav_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/my_coupon_user_icon_normal"
                android:text="我的点评"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/my_address_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="个人地址"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_address"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="我的订单"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_order_user_icon_normal"
            android:drawableRight="@drawable/arrow_normal"
            android:background="@color/white"
            android:drawablePadding="@dimen/normal_space"/>
        <TextView 
            android:id="@+id/my_index_item_seller_order_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:text="销售管理"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_wallet_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_day_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_marginBottom="1px"
            android:text="每日推荐"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_day_recommend_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最近浏览"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_history_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_normal"/>
        <TextView 
            android:id="@+id/my_index_item_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:text="设置"
            android:textSize="@dimen/text_size_defalut"
            android:gravity="center_vertical"
            android:padding="@dimen/normal_space"
            android:drawablePadding="@dimen/normal_space"
            android:drawableLeft="@drawable/my_setting_user_icon_normal"
            android:background="@color/white"
            android:drawableRight="@drawable/arrow_normal"
            android:layout_marginBottom="40dp"/>
         
         
     </LinearLayout>
     

</ScrollView>
